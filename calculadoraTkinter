def c():
    global jan
    global Cal
    Cal = []
    jan = ""
    visor["text"] = ""


def som():
    try:
        global jan
        global Cal

        if (jan.isnumeric() == True):
            jan = int(jan)
            Cal.append(jan)
        else:
            pass

        tam = len(Cal)
        if tam == 0:
            pass
        if (Cal[tam - 1] == "+") or (Cal[tam - 1] == "-") or (Cal[tam - 1] == "X" or (Cal[tam - 1] == "/")):
            pass
        else:
            visor["text"] += "+"
            Cal.append("+")
            jan = ""
    except:
        pass


def sub():
    try:
        global jan
        global Cal
        if (jan.isnumeric() == True):
            jan = int(jan)
            Cal.append(jan)
        else:
            pass

        tam = len(Cal)
        if tam == 0:
            pass
        if (Cal[tam - 1] == "+") or (Cal[tam - 1] == "-") or (Cal[tam - 1] == "X" or (Cal[tam - 1] == "/")):
            pass
        else:
            visor["text"] += "-"
            Cal.append("-")
            jan = ""
    except:
        pass


def div():
    try:
        global jan
