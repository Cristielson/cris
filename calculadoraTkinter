def mul():
    try:
        global jan
        global Cal
        if (jan.isnumeric() == True):
            jan = int(jan)
            Cal.append(jan)
        else:
            pass

        tam = len(Cal)
        if tam == 0:
            pass
        if (Cal[tam - 1] == "+") or (Cal[tam - 1] == "-") or (Cal[tam - 1] == "X" or (Cal[tam - 1] == "/")):
            pass
        else:
            visor["text"] += "X"
            Cal.append("X")
            jan = ""
    except:
        pass


def ig():
    try:
        global jan
        global Cal
        if jan != "":
            Cal.append(jan)
        cont = 0
        i = -1
        tam = len(Cal)
        if Cal[tam - 1].isnumeric() == False:
            del(Cal[tam - 1])

        x = Cal.count("X")
        y = Cal.count("/")
        mai = Cal.count("+")
        men = Cal.count("-")

        if (x == 0) and (y == 0) and (men == 0):
            for i in Cal:
                i = str(i)
                i = i.replace("\n", "")
                if i.isnumeric() == True:
                    i = int(i)
                    cont += i
            visor["text"] = cont
            jan = Cal[0]

        elif (y == 0) and (mai == 0) and (men == 0):
            cont = 1
            for i in Cal:
                i = str(i)
                i = i.replace("\n", "")
                if i.isnumeric() == True:
                    i = int(i)
                    cont *= i
            visor["text"] = cont
            jan = Cal[0]

        elif (x == 0) and (y == 0) and (mai == 0):
            i = 0
            for u in range(len(Cal)):
                sub = 0
                try:
                    if Cal[i] == "-":
                        sub = int(Cal[i - 1]) - int(Cal[i + 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        Cal.insert(i - 1, sub)
                        i = 0

                    i += 1
                    visor["text"] = Cal
                    jan = Cal[0]
                except:
                    pass

        elif (x == 0) and (men == 0) and (mai == 0):
            i = 0
            for u in range(len(Cal)):
                div = 0
                try:
                    if Cal[i] == "/":
                        div = int(Cal[i - 1]) / int(Cal[i + 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        Cal.insert(i - 1, div)
                        i = 0

                    i += 1
                    visor["text"] = Cal
                    jan = Cal[0]
                except:
                    pass

        elif (x == 0) and (y == 0):
            i = 0
            for u in range(len(Cal)):
                soma = sub = 0
                try:
                    if Cal[i] == "+":
                        soma = int(Cal[i - 1]) + int(Cal[i + 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        Cal.insert(i - 1, soma)
                        i = 0
                    elif Cal[i] == "-":
                        sub = int(Cal[i - 1]) - int(Cal[i + 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        Cal.insert(i - 1, sub)
                        i = 0

                    i += 1
                    visor["text"] = Cal
                    jan = Cal[0]

                except:
                    pass

        else:

            try:
                i = 0
                for u in range(len(Cal)):
                    div = 0
                    if Cal[i] == "/":
                        div = float(Cal[i - 1]) / float(Cal[i + 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        Cal.insert(i - 1, div)
                        i = 0

                    i += 1
                    visor["text"] = Cal
            except:
                pass

            try:
                i = 0
                for u in range(len(Cal)):
                    sub = 0
                    if Cal[i] == "X":
                        sub = float(Cal[i - 1]) * float(Cal[i + 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        Cal.insert(i - 1, sub)
                        i = 0

                    i += 1
            except:
                pass

            try:
                i = 0
                for u in range(len(Cal)):
                    sub = 0
                    if Cal[i] == "X":
                        sub = float(Cal[i - 1]) * float(Cal[i + 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        Cal.insert(i - 1, sub)
                        i = 0

                    i += 1
            except:
                pass

            try:
                i = 0
                for u in range(len(Cal)):
                    soma = sub = 0
                    if Cal[i] == "+":
                        soma = float(Cal[i - 1]) + float(Cal[i + 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        Cal.insert(i - 1, soma)
                        i = 0
                    elif Cal[i] == "-":
                        sub = float(Cal[i - 1]) - float(Cal[i + 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        del (Cal[i - 1])
                        Cal.insert(i - 1, sub)
                        i = 0

                    i += 1


            except:
                pass

            Ab = Cal[0]
            Ab = (f"{Ab: 0.5f}")
            Ab = float(Ab)
            try:
                Ab = int(Ab)
                visor["text"] = Ab
                jan = Cal[0]
            except:
                visor["text"] = Ab
                jan = Cal[0]

    except:
        pass



